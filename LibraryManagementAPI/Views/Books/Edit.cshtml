@model LibraryManagementAPI.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container my-5">
    <h2 class="text-center mb-4 text-primary">Edit Book</h2>

    <div class="card shadow-lg p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="BookID" /> <!-- Hidden field to store BookID -->

            <div class="form-group mb-4">
                <label asp-for="BookName" class="control-label fs-5 fw-semibold text-primary"></label>
                <input asp-for="BookName" class="form-control form-control-lg" placeholder="Enter book name" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="BookAuthor" class="control-label fs-5 fw-semibold text-primary"></label>
                <input asp-for="BookAuthor" class="form-control form-control-lg" placeholder="Enter author name" />
                <span asp-validation-for="BookAuthor" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success btn-lg w-45">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-45 text-center">Cancel</a>
            </div>
        </form>
    </div>
</div>
