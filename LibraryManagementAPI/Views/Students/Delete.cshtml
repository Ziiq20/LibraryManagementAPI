@model LibraryManagementAPI.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container my-5">
    <h2 class="text-center text-danger mb-4">Delete Student</h2>

    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4">Are you sure you want to delete this student?</h3>

        <dl class="row mb-4">
            <dt class="col-sm-3 fs-5 fw-semibold text-primary">Student Name</dt>
            <dd class="col-sm-9 fs-5">@Model.StudentName</dd>

            <dt class="col-sm-3 fs-5 fw-semibold text-primary">Date of Birth</dt>
            <dd class="col-sm-9 fs-5">@Model.DOB.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 fs-5 fw-semibold text-primary">Email</dt>
            <dd class="col-sm-9 fs-5">@Model.Email</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="StudentID" />

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger btn-lg w-45">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-45 text-center">Cancel</a>
            </div>
        </form>
    </div>
</div>
